# ================================
# 🌱 DATABASE CONFIGURATION
# ================================
# MySQL 접속 관련 설정
DB_NAME=buyingshop
DB_URL=jdbc:mysql://localhost:3306/buyingshop?serverTimezone=Asia/Seoul&characterEncoding=UTF-8
DB_DRIVER=com.mysql.cj.jdbc.Driver

# MySQL 사용자 계정
DB_USERNAME=
DB_PASSWORD=
DB_ROOT_PASSWORD=

# ================================
# ☁️ SPRING CONFIGURATION
# ================================
# 현재 실행할 Spring Profile (local, dev, prod 중 하나)
SPRING_PROFILES_ACTIVE=local

# 애플리케이션 포트 설정 (기본값: 8080)
SERVER_PORT=8080

# ================================
# 🔐 JWT CONFIGURATION
# ================================
# JWT 토큰 만료 시간 (분 단위)
EXPIRE_TIME=300

# JWT 시크릿 키
SECRET_KEY=

# ================================
# 🧰 LOGGING CONFIGURATION
# ================================
# 로그 레벨 (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# ================================
# 🐳 DOCKER CONFIGURATION
# ================================
# Docker 내부에서 DB를 연결할 때 사용하는 호스트 이름
DOCKER_DB_HOST=buying-mysql
